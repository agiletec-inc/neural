{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "neural-translator",
  "version": "0.1.0",
  "identifier": "com.neural-translator.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "NeuraL Translator",
        "label": "main",
        "width": 900,
        "height": 600,
        "minWidth": 800,
        "minHeight": 500,
        "resizable": true,
        "center": true,
        "decorations": true,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "visible": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
